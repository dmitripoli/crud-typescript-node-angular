{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "allowJs": true,
    "checkJs": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
